<h1>All users</h1>
<%= form_tag(:action => :update_roles, :method => :put) do %>
<table>
<% @users.each  do |user| %>

  <tr>
    <td>
      <%=  user.email %>
    </td>
    <td>

    </td>
    <td>
      <% roles = UsersRole.find_by_user_id(user.id)  %>
       <%= roles.role.name %>
    </td>
    <td>
        <%= select_tag( "user[]" ,  "<option>User</option><option>Admin</option>".html_safe)
            #check_box_tag("user[]", user.id ,if roles.role.name=="admin" then true end )
        %>
    </td>
  </tr>

<% end %>
</table>
<%= submit_tag("Save changes") %>
<% end %>
