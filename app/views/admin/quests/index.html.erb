<h1>Listing quests</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Tip vop</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quests.each do |quest| %>
  <tr>
    <td><%= quest.title %></td>
    <td><%= quest.tip_vop %></td>
    <td><%= link_to 'Show', "#" %></td>
    <td><%= link_to 'Edit', edit_admin_quest_path(quest) %></td>
    <td><%= link_to 'Destroy', admin_quest_path(quest), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

