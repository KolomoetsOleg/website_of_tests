<%= form_for [:admin, @test] do |f| %>
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @test.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Название теста" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Описание теста" %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label "Количество попыток" %><br />
    <%= f.number_field :kol_pop, :in => 1..10%>
  </div>
  <div class="field">
    <%= f.label "Время прохождения" %><br />
    <%= f.number_field :time, :min => 1  %>
  </div>
  <div class="field">
    <%= f.label "Сделать активным" %><br />
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit("Сохранить") %>
  </div>
<% end %>
