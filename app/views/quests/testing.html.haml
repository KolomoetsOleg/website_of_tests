%p#timer
:javascript
  timer(#{@time.hour}, #{@time.min}, #{@time.sec},#{@page})
#quest.container.pull-left
  %h3.page-header
    Вопрос #{@page} из #{@all_quest}
    %br/
  = form_tag(:controller => :quests, :action =>:testing, :id=> @page) do
    = label_tag(@quest.title)
    - case @quest.tip_vop                                                      
    - when 1                                                                 
      = render :partial => 'radio', :locals => { :answer => @quest.answers } 
    - when 2                                                                   
      = render :partial => 'chek', :locals => { :answer => @quest.answers }  
    - else                                                                     
      = render :partial => 'text'                                                                                                          
    = hidden_field_tag(:id_quest, @quest.id)
- if @end == false
  = submit_tag("Ответить", :name => "next")
- if @end == false
  = button_to "Пропустить", { :action => :testing, :id => @page}, :class => "btn"      
= button_to "Завершить тест", { :action => :finish, :id => @page }, :confirm => "Вы уверены что готовы звершить тест?", :class => "btn" 
