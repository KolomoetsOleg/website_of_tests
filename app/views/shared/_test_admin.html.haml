%table
  %tr
    %th
      %h4 Название теста
    %th
      %h4 Описание теста
    %th
      %h4 Активность
    %th
    %th
    %th
    %th
  - @tests.each do |test|
    %tr
      %td
        %h5= test.title
      %td
        %h5
          = test.description
      %td
        = test.active
      %td
        = link_to "| Результаты |", results_admin_test_path(test)
      %td
        = link_to "| Редактировать |", edit_admin_test_path(test)
      %td
        = link_to "| Удалить |", admin_test_path(test), :method => :delete
      %td
        = link_to "| Вопросы |", admin_quest_path(test)